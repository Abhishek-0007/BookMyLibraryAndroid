<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.example.expensemanager.models.LibraryBody" >
        </variable>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_margin="8dp"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/lib"
                    android:layout_marginTop="-4dp"
                    android:layout_width="44dp"
                    android:layout_height="36dp"
                    android:src="@drawable/librarygif" />
            <TextView
                android:id="@+id/titleLib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="PVR: Inorbit, Cyberabad"
                android:textColor="@color/black"
                android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/send"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_margin="8dp"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/map"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="-6dp"
                    android:src="@drawable/mapdirection" />

                <TextView
                    android:id="@+id/info"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="INFO"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-10dp"
                android:drawablePadding="10dp"
                android:text="Non-cancellable"
                android:textColor="#777777"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/layoutMovieTime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:padding="8dp"
                android:gravity="start|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvShowTime1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btnshape"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="12:30 PM"
                    android:textColor="#00aa00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvShowTime2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btnshape"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="3:00 PM"
                    android:textColor="#00aa00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvShowTime3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btnshape"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="6:00 PM"
                    android:textColor="#00aa00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>